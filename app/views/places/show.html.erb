 
 <div class="extra_padding pix_builder_bg dark event_bg" id="section_normal_4_1" data-selector=".pix_builder_bg" style="outline-offset: -3px; background-image: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), url('<%= @place.featured_image.url(:large) %>')">
            <div class="container">
                <div class="sixteen columns">
                    <div class="twelve columns alpha margin_bottom_30">
                        
                        <p class="big_title editContent" data-selector="p" style=""><strong><%= @place.brand_name %></strong></p>
                        <p class="normal_text normal_gray editContent" data-selector="p" style="">
                            <%= @place.operating_address %>
                        </p>
                        <% unless @place.link_to_online_ordering_page.blank? %><%= link_to "Order NOW!", raw(@place.link_to_online_ordering_page), :class => "pix_button btn_normal bold_text orange_bg" %>
			<% end %>
                    </div>
                </div>
	       </div>
        </div>
<div class="pixfort_text_2_1 pix_builder_bg" id="section_text_2_1" data-selector=".pix_builder_bg" style="">
  <div class="container ">
    <div class="two-thirds column">
      <div class="content_div">
        <div class="event_box row pix_builder_bg">
          <div class="event_box_1 ">
            <div class="event_box_img ">
              <%= image_tag(@place.logo.url(:large), :class => "img-responsive") %>
            </div>
          </div>
          <div class="event_box_2">
            <div class="padding_15 hor_padding">
              <h4 data-selector="h4" style="">
                <strong><%= @place.brand_name %></strong>
              </h4>
              <i class="fa fa-map-marker"></i> <%= @place.operating_address %><hr>
              <img src="http://friends.jumaiyah.com/wp-content/uploads/2016/12/phone-call.png" title="Email" width="16"> <%= @place.general_outlet_contact_number %><hr>
              <% unless @place.website.blank? %>
              <img src="http://friends.jumaiyah.com/wp-content/uploads/2016/12/house.png" title="Monitor" width="16">
              <%= link_to @place.website, "#{@place.website}" %>
              <% end %><hr>
              Social sites: <% unless @place.facebook_page.blank? %><%= link_to @place.facebook_page do %><i class="fa fa-facebook-official"></i><% end %><% end %>
              <% unless @place.instagram_handle.blank? %><%= link_to @place.instagram_handle do %><i class="fa fa-instagram"></i><% end %><% end %>
            </div>
          </div>
        </div>
        <% @place.rewards.each do |reward| %>
        <% unless reward.discount.blank? %>
        <div class="event_box row pix_builder_bg">
          <div class="event_box_1 ">
            <div class="event_box_img ">
              <%= image_tag reward.discount.icon.url(:large), :class => "img-responsive" %>
            </div>
          </div>
          <div class="event_box_2">
            <div class="padding_15 hor_padding">
              <h4 data-selector="h4" style="">
                <strong>FRIENDS CARD HOLDERS ONLY</strong>
              </h4>
              <%= reward.terms %>
              <p><br><%= link_to 'View More Rewards', rewards_path, class: "btn btn-default" %></p>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
        <div class="event_box row pix_builder_bg">
         <h4>ON THE MENU</h4>
         <% @place.menus.each do |menu| %>
         <% unless menu.image.blank? %>
         <div class="col-md-4">
          <div class="thumbnail">
            <%= image_tag menu.image.url(:square), :class => "img-responsive" %>
            <div class="caption">
              <p><%= menu.name %></p>
              <p><%= menu.description %></p>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
      <div class="event_box row pix_builder_bg">
       <h4>FAQ</h4>
       <h6 class="pix_text">What do you recommend our users to try when they visit you?</h6>
       <p><%= @place.question_1 %></p><br>
       <h6 class="pix_text">What is the easiest way to get to your place by public transport?</h6>
       <p><%= @place.question_2 %></p>
     </div>
   </div>
 </div>
 <div class="one-third column">
  <div class="content_div">
    <% unless @place.qualifying_type.blank? %>
    <div class="event_box row pix_builder_bg  center_text">
      <h4 data-selector="h4" style="">
        <strong>Halal Verification</strong>
      </h4>
      <center>
        <% if @place.verified == true %>
        <%= image_tag @place.qualifying_type.icon.url(:medium), :class => "img-circle img_responsive", :style => "height:80px; width:80px;" %>
        <% else %>
        <img class="img-responsive" src="http://s3.amazonaws.com/international-hfh/verifying_types/icons/000/000/002/medium/Listing_Icons_Artboard_12.png?1487220138" alt="Chania">
        <% end %>
      </center>
      <% if @place.verified == true %>
      <%= @place.qualifying_type.halal_summary %>
      <% else %>
      This business has yet to submit documents for official verification.
      <% end %>
      <% end %>
    </div>
    <div class="event_box row pix_builder_bg">
    <h4 class="editContent">Opening Hours</h4>
    <p class="editContent"> <% @place.opening_hours.each do |time| %>
      <div class="col-xs-4 col-sm-4 col-md-4" style="padding:0;">
        <%= time.day.name %>
      </div>
      <div class="col-xs-3 col-sm-3 col-md-3">
        <%= time.open.strftime("%I:%M %p") %>
      </div>
      <div class="col-xs-2 col-sm-2 col-md-2">
        <p>-</p>
      </div>
      <div class="col-xs-3 col-sm-3 col-md-3">
        <%= time.close.strftime("%I:%M %p") %>
      </div>
      <% end %></p>
      </div>
    <div class="event_box row pix_builder_bg">
       <h4>FEATURES</h4>
       <% @place.features.each do |feature| %>
				<div class="col-xs-12 col-md-12" style="padding:0;"><p><%= image_tag feature.icon.url(:thumb) %> <%= link_to feature.name, places_path(feature: feature.name) %></p>
				</div>
				<% end %>
     </div>
     <div class="event_box row pix_builder_bg">
       <h4>Dining Types</h4>
       <% @place.dining_types.each do |dining_type| %>
				<div class="col-xs-12 col-md-12" style="padding:0;"><p><%= image_tag dining_type.icon.url(:thumb) %> <%= link_to dining_type.name, places_path(dining_type: dining_type.name) %></p>
				</div>
				<% end %>
     </div>
    </div>
  </div>
</div>
</div>
