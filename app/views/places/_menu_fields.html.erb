<div class="nested-fields">
	<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4" style="margin-left:0; margin-right:0;">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-left:0; margin-right:0;">
			<% @place.menus.each do |menu| %>
			<div class="col-sm-12 col-md-2">
				<%= image_tag(menu.image.url(:thumb), :class => "img-responsive") %>
			</div>
			<% end %>
		</div>
	</div>
	<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8" style="margin-left:0; margin-right:0;">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-left:0; margin-right:0;">
			<div class="col-xs-12 col-sm-12 col-md-2 col-lg-2" style="margin-left:0;">
				<%= f.file_field :image %>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-5 col-lg-5" style="margin-left:0;">
				<%= f.text_field :name, label: "Dish Name" %>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-5 col-lg-5" style="margin-left:0;">
				<%= f.text_area :description, label: "Description" %>
			</div>
		</div>
	</div>
	<%= link_to_remove_association "Remove Menu Item",  f %>
	<hr>
</div>