 <% @places.each do |place| %>
 <div class="four columns alpha">
   <div class="card-container manual-flip">
    <div class="card">
      <div class="front">
        <div class="cover">
          <% unless place.qualifying_type.blank? %>
          <% if place.verified == true %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(place.qualifying_type.image.url(:large), :class => "img-responsive", :style => "width:40px; height:40px;") %></span>
          <% else %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><img class="img-responsive" src="http://s3.amazonaws.com/international-hfh/verifying_types/icons/000/000/002/square/Listing_Icons_Artboard_12.png?1487060601" alt="Chania" style="width:40px; height:40px;"></span><% end %><% end %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:16%;"><%= image_tag(place.place_type.image.url(:large), :class => "img-responsive", :style => "width:40px; height:40px;") %></span> 
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:28%;">
            <% place.rewards.each do |reward| %>
            <% unless reward.discount.blank? %>
            <%= image_tag reward.discount.icon.url(:large), :class => "img-responsive", :style => "width:40px; height:40px;" %>
            <% end %>
            <% end %>
          </span>
          <%= image_tag place.featured_image.url(:square) %>
        </div>
        <div class="user">
          <%= image_tag place.logo.url(:medium), :class => "img-circle" %>
        </div>
        <div class="content">
            <label><strong><%= link_to place.brand_name, place_path(place) %></strong></label>
            <p class="profession" style="text-transform: capitalize !important;"><i class="fa fa-map-marker"></i> <%= place.operating_address %></p>
        </div>
      </div> <!-- end front panel -->
    </div>
  </div>
</div>
<% end %>