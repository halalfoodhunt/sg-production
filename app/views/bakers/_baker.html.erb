<% @bakers.each do |baker| %>
 <div class="four columns alpha">
   <div class="card-container manual-flip">
    <div class="card">
      <div class="front">
        <div class="cover">
          <% if baker.verified == true %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(baker.qualifying_type.image.url(:square), :class => "img-responsive") %></span>
          <% else %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><img class="img-responsive" src="http://s3.amazonaws.com/international-hfh/verifying_types/icons/000/000/002/square/Listing_Icons_Artboard_12.png?1487060601" alt="Chania" style="width:40px; height:40px;"></span><% end %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:16%;"><%= image_tag baker.baker_type.image.url(:square), :class => "img-responsive" %></span> 
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:28%;">
            <% unless baker.discount.name.blank? %>
            <%= image_tag baker.discount.icon.url(:square), :class => "img-responsive" %>
            <% end %>
          </span>
          <%= image_tag baker.featured_image.url(:square) %>
        </div>
        <div class="user">
          <%= image_tag baker.logo.url(:medium), :class => "img-circle" %>
        </div>
        <div class="content">
            <label><strong><%= link_to baker.brand_name, baker_path(baker) %></strong></label>
            <p class="profession" style="text-transform: capitalize !important;"><i class="fa fa-map-marker"></i> <%= baker.self_collection_address %></p>
        </div>
      </div> <!-- end front panel -->
    </div>
  </div>
</div>
<% end %>