<p id="notice"><%= notice %></p>

<h1>Listing Baker Product Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @baker_product_categories.each do |baker_product_category| %>
      <tr>
        <td><%= baker_product_category.name %></td>
        <td><%= link_to 'Show', baker_product_category %></td>
        <td><%= link_to 'Edit', edit_baker_product_category_path(baker_product_category) %></td>
        <td><%= link_to 'Destroy', baker_product_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

