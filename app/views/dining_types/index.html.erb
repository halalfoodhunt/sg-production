<p id="notice"><%= notice %></p>

<h1>Listing Dining Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dining_types.each do |dining_type| %>
      <tr>
        <td><%= dining_type.name %></td>
        <td><%= dining_type.icon %></td>
        <td><%= link_to 'Show', dining_type %></td>
        <td><%= link_to 'Edit', edit_dining_type_path(dining_type) %></td>
        <td><%= link_to 'Destroy', dining_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

