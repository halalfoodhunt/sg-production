<% @food_deliveries.each do |food_delivery| %>
 <div class="four columns alpha">
   <div class="card-container manual-flip">
    <div class="card">
      <div class="front">
        <div class="cover">
          <% if food_delivery.verified == true %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(food_delivery.qualifying_type.image.url(:large), :class => "img-responsive", :style => "width:40px; height:40px;") %></span>
          <% else %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><img class="img-responsive" src="http://s3.amazonaws.com/international-hfh/verifying_types/icons/000/000/002/square/Listing_Icons_Artboard_12.png?1487060601" alt="Chania" style="width:40px; height:40px;"></span><% end %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:28%;">
            <% food_delivery.rewards.each do |reward| %>
            <% unless reward.discount.blank? %>
            <%= image_tag reward.discount.icon.url(:large), :class => "img-responsive", :style => "width:40px; height:40px;" %>
            <% end %>
            <% end %>
          </span>
          <%= image_tag food_delivery.featured_image.url(:square) %>
        </div>
        <div class="user">
          <%= image_tag food_delivery.logo.url(:medium), :class => "img-circle" %>
        </div>
        <div class="content">
            <center>
            <label><strong><%= link_to food_delivery.brand_name, food_delivery_path(food_delivery) %></strong></label><br>
            <%= link_to "View", food_delivery_path(food_delivery), :class => "btn btn-default" %>
            </center>
        </div>
      </div> <!-- end front panel -->
    </div>
  </div>
</div>
<% end %>