 <div class="four columns alpha hidden-xs">
  <%= search_form_for @search_food_deliveries, :html => {:class => 'form_no_padding' }, url: food_deliveries_path do |f| %>
  <h4 style="margin-top:0;"><i class="fa fa-filter" aria-hidden="true"></i> Filter Food Deliveries</h4> 
  <button class="btn btn-block btn-light" type="button" data-toggle="collapse" data-target="#collapseExample14" aria-expanded="false" aria-controls="collapseExample14" style="margin-bottom:10px;">
    Filter Menu Items
  </button>
  <div class="collapse in" id="collapseExample14">
    <div class="card card-body">
      <i class="fa fa-list" aria-hidden="true"></i> <b><%= f.label "Menu Items" %></b> <small>(<%= link_to 'Clear Selection', food_deliveries_path %>)</small><br>
      <%= f.collection_check_boxes :food_deliveries_menu_items_id_in_any, FoodDeliveriesMenuItem.first(10), :id, :name do |b| %>
      <div class="col-xs-12 col-sm-12 col-md-6" style="padding-left:0;">
        <%= b.check_box %> <%= b.label :style => 'font-size:12px; text-transform: none;' %>
      </div>
      <% end %><hr>
      <div id="moredeliveriesitems" class="collapse">
        <%= f.collection_check_boxes :food_deliveries_menu_items_id_in_any, FoodDeliveriesMenuItem.offset(10), :id, :name do |b| %>
        <div class="col-xs-12 col-sm-12 col-md-12" style="padding-left:0;">
          <%= b.check_box %> <%= b.label :style => 'font-size:12px; text-transform: none;' %>
        </div>
        <% end %>
      </div>
      <p><a href="#moredeliveriesitems" data-toggle="collapse"><i class="fa fa-plus" aria-hidden="true"></i> See More</a></p>
    </div>
  </div>
  <button class="btn btn-block btn-light" type="button" data-toggle="collapse" data-target="#collapseExample15" aria-expanded="false" aria-controls="collapseExample15" style="margin-bottom:10px;">
    Filter Delivery Service
  </button>
  <div class="collapse in" id="collapseExample15">
    <div class="card card-body">
      <i class="fa fa-list" aria-hidden="true"></i> <b><%= f.label "Delivery Service" %></b> <small>(<%= link_to 'Clear Selection', food_deliveries_path %>)</small><br>
      <%= f.collection_check_boxes :delivery_service_types_id_in_any, DeliveryServiceType.first(5), :id, :name do |b| %>
      <div class="col-xs-12 col-sm-12 col-md-12" style="padding-left:0; padding-right:0;">
        <%= b.check_box %> <%= b.label :style => 'font-size:12px; text-transform: none;' %>
      </div>
      <% end %><hr>
      <div id="moredeliveryservicetype" class="collapse">
        <%= f.collection_check_boxes :delivery_service_types_id_in_any, DeliveryServiceType.offset(5), :id, :name do |b| %>
        <div class="col-xs-12 col-sm-12 col-md-12" style="padding-left:0; padding-right:0;">
          <%= b.check_box %> <%= b.label :style => 'font-size:12px; text-transform: none;' %>
        </div>
        <% end %>
      </div>
      <p><a href="#moredeliveryservicetype" data-toggle="collapse"><i class="fa fa-plus" aria-hidden="true"></i> See More</a></p>
    </div>
  </div>
  <button class="btn btn-block btn-light" type="button" data-toggle="collapse" data-target="#collapseExample16" aria-expanded="false" aria-controls="collapseExample16" style="margin-bottom:10px;">
    Filter Service Types
  </button>
  <div class="collapse in" id="collapseExample16">
    <div class="card card-body">
      <i class="fa fa-list" aria-hidden="true"></i> <%= f.label "Service Types" %> <small>(<%= link_to 'Clear Selection', food_deliveries_path %>)</small><br>
      <%= f.collection_check_boxes :delivery_locations_id_in_any, DeliveryLocation.first(5), :id, :name do |b| %>
      <div class="col-xs-12 col-sm-12 col-md-12" style="padding-left:0;">
        <%= b.check_box %> <%= b.label :style => 'font-size:12px; text-transform: none;' %>
      </div>
      <% end %><hr>
      <div id="moredeliverylocations" class="collapse">
        <%= f.collection_check_boxes :delivery_locations_id_in_any, DeliveryLocation.offset(5), :id, :name do |b| %>
        <div class="col-xs-12 col-sm-12 col-md-12" style="padding-left:0;">
          <%= b.check_box %> <%= b.label :style => 'font-size:12px; text-transform: none;' %>
        </div>
        <% end %>
      </div>
      <p><a href="#moredeliverylocations" data-toggle="collapse"><i class="fa fa-plus" aria-hidden="true"></i> See More</a></p>
    </div>
  </div>
   <%= f.submit "Filter", :class => "btn btn-block btn-default", :style => "padding:10px;" %>
  <% end %>
</div>