          <%= b.check_box %> <%= b.label :style => 'font-size:12px; text-transform: none;' %>
        </div>
        <% end %>
      </div>
      <p><a href="#morecatererservicetype" data-toggle="collapse"><i class="fa fa-plus" aria-hidden="true"></i> See More</a></p>
    </div>
  </div>
  <button class="btn btn-block btn-light" type="button" data-toggle="collapse" data-target="#collapseExample12" aria-expanded="false" aria-controls="collapseExample12" style="margin-bottom:10px;">
    Filter Cuisine Types
  </button>
  <div class="collapse in" id="collapseExample12">
    <div class="card card-body">
      <i class="fa fa-list" aria-hidden="true"></i> <%= f.label "Cuisine Types" %> <small>(<%= link_to 'Clear Selection', caterers_path %>)</small><br>
       <%= f.collection_check_boxes :cuisine_types_id_in_any, CuisineType.first(5), :id, :name do |b| %>
      <div class="col-xs-12 col-sm-12 col-md-12" style="padding-left:0;">
        <%= b.check_box %> <%= b.label :style => 'font-size:12px; text-transform: none;' %>
