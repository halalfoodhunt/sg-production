<% @online_retails.each do |online_retail| %>
<div class="four columns alpha">
	<div class="card-container manual-flip">
		<div class="card">
			<div class="front">
				<div class="cover">
					<% unless online_retail.product_qualifying_type.blank? %>
					<% if online_retail.verified == true %>
					<span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(online_retail.product_qualifying_type.image.url(:large), :class => "img-responsive", :style => "width:40px; height:40px;") %></span>
					<% else %>
					<span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><img class="img-responsive" src="http://s3.amazonaws.com/international-hfh/verifying_types/icons/000/000/002/square/Listing_Icons_Artboard_12.png?1487060601" alt="Chania" style="width:40px; height:40px;"></span><% end %><% end %>
					<span class="top-label" style="position:absolute; z-index:100; padding:5px; left:28%;">
						<% online_retail.rewards.each do |reward| %>
						<% unless reward.discount.name.blank? %>
						<%= image_tag reward.discount.icon.url(:large), :class => "img-responsive", :style => "width:40px; height:40px;" %>
						<% end %>
						<% end %>
					</span>
					<%= image_tag online_retail.featured_image.url(:square) %>
				</div>
				<div class="user">
					<%= image_tag online_retail.logo.url(:medium), :class => "img-circle" %>
				</div>
				<div class="content">
					<center><label><strong><%= link_to online_retail.brand_name, online_retail_path(online_retail) %></strong></label><br>
						<div class="btn-group">
							<%= link_to "View Details", online_retail_path(online_retail), :class => "btn btn-primary" %>
							<% unless online_retail.website_online_ordering_page.blank? %><%= link_to "Order", online_retail.website_online_ordering_page, :class => "btn btn-primary" %>
							<% end %>
						</div>
					</center>
				</div>
			</div> <!-- end front panel -->
		</div>
	</div>
</div>
<% end %>