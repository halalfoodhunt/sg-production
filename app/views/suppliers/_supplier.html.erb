<% @suppliers.each do |supplier| %>
 <div class="four columns alpha">
   <div class="card-container manual-flip">
    <div class="card">
      <div class="front">
        <div class="cover">
          <% unless supplier.product_qualifying_type.blank? %>
          <% if supplier.verified == true %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(supplier.product_qualifying_type.image.url(:square), :class => "img-responsive") %></span>
          <% else %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><img class="img-responsive" src="http://s3.amazonaws.com/international-hfh/verifying_types/icons/000/000/002/square/Listing_Icons_Artboard_12.png?1487060601" alt="Chania" style="width:40px; height:40px;"></span><% end %><% end %>
          <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:28%;">
          </span>
          <%= image_tag supplier.featured_image.url(:square) %>
        </div>
        <div class="user">
          <%= image_tag supplier.logo.url(:medium), :class => "img-circle" %>
        </div>
        <div class="content">
            <label><strong><%= link_to supplier.brand_name, supplier_path(supplier) %></strong></label>
        </div>
      </div> <!-- end front panel -->
    </div>
  </div>
</div>
<% end %>